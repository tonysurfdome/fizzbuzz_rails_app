<div class="row">
  <div class="col-md-6">
    <h1></h1>
  </div>
  <div class="col-md-6">
    <%= form_tag root_path, class: 'form-inline update-form', method: :get do %>
      <%= label_tag 'Max:' %>
      <%= text_field_tag 'max', @max, class: 'form-control' %>
      <%= label_tag 'Per page:' %>
      <%= text_field_tag 'page_size', @page_size, class: 'form-control' %>
      <%= submit_tag 'Update', class: 'btn btn-default' %>
    <% end %>
  </div>
</div>
<%= fizzbuzz(@values) %>
<%= paginate @values %>
